<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="15dp"
    android:clickable="true"
    android:elevation="20dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    android:id="@+id/cardviewDelivery"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:background="@drawable/card_views">


        <TextView
            android:id="@+id/txtSequenciaOffer"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtRazaoOffer"
            android:layout_alignBottom="@+id/txtRazaoOffer"
            android:layout_alignEnd="@+id/txtBairroOffer"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/txtRazaoOffer"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />


        <View
            android:id="@+id/view6Offer"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtSequenciaOffer"
            android:layout_marginTop="2dp"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/txtBairroOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSequenciaOffer"
            android:padding="20dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/txtCidadeOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtBairroOffer"
            android:layout_toEndOf="@+id/txtBairroOffer"
            android:padding="10dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txtUFOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtCidadeOffer"
            android:layout_alignBottom="@+id/txtCidadeOffer"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txtStatusEntregaOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaaaaaaaaaa"
            android:textColor="#FFEB3B"
            android:textSize="17dp"
            android:layout_below="@+id/txtBairroOffer"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>


</android.support.v7.widget.CardView>

