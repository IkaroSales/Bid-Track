<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_very_light">

    <ImageView
        android:id="@+id/ivEmpresa2"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/activity_background" />

    <TextView
        android:id="@+id/tvMotorista2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvEmpresa2"
        android:layout_alignStart="@+id/tvEmpresa2"
        android:layout_marginLeft="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/tvEmpresa2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_alignBottom="@+id/ivEmpresa2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/rbMotorista"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvEmpresa2"
        android:layout_toEndOf="@+id/imageView2"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/tvMotorista2"
        android:layout_toEndOf="@+id/tvMotorista2"
        app:srcCompat="@drawable/star" />


</RelativeLayout>