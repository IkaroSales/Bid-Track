<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivEmpresa2"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white" />

    <TextView
        android:id="@+id/tvMotorista2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvEmpresa2"
        android:layout_alignStart="@+id/tvEmpresa2"
        android:layout_marginLeft="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/tvEmpresa2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_alignBottom="@+id/ivEmpresa2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp" />

    <RatingBar
        android:id="@+id/rbMotorista"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvEmpresa2"
        android:layout_toEndOf="@+id/tvMotorista2"
        android:numStars="6"
        android:visibility="visible" />


</RelativeLayout>