<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view23"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/thumbnail2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/mapteste" />

        <TextView
            android:id="@+id/cod_oferta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:maxLines="3"
            android:padding="8dp"
            android:text="codigo"
            android:textColor="#999999"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/peso_oferta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:maxLines="3"
            android:padding="8dp"
            android:text="oh yeah"
            android:textColor="#999999"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/dinheiro_oferta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/gray_deep"
            android:padding="8dp"
            android:text="money"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/thumbnail2"
            android:layout_marginStart="25dp"
            android:layout_marginTop="26dp"
            android:text="De:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvEstadoO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:text="PE"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCidadeO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvEstadoO"
            android:layout_below="@+id/tvEstadoO"
            android:text="Recife" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_marginStart="43dp"
            android:layout_toEndOf="@+id/peso_oferta"
            android:text="Para:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvEstadoD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:text="RS"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCidadeD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/tvEstadoD"
            android:text="Salvador" />

        <TextView
            android:id="@+id/tvDistancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvEstadoO"
            android:layout_alignEnd="@+id/peso_oferta"
            android:layout_marginEnd="22dp"
            android:textSize="15dp"
            android:text="TextView" />

    </RelativeLayout>
</android.support.v7.widget.CardView>